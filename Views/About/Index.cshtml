@model List<About>
@{
  ViewData["Title"] = "Hakkımda Yönetimi";
  Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
  <div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <div>
        <h4 class="page-title">Hakkımda Yönetimi</h4>
      </div>
      <a href="/About/Create" class="btn btn-primary btn-round shadow-sm">
        <i class="la la-plus"></i> Yeni Kayıt Ekle
      </a>
    </div>

    @if (TempData["Success"] != null)
    {
      <div class="alert alert-success border-0 shadow-sm alert-dismissible fade show" role="alert">
        <i class="la la-check-circle"></i> @TempData["Success"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
    }

    <div class="row">
      <div class="col-md-12">
        <div class="card shadow-sm border-0">
          <div class="card-header bg-white py-3">
            <h5 class="card-title mb-0">Bilgi Listesi</h5>
          </div>
          <div class="card-body p-0">
            <div class="table-responsive">
              <table class="table table-hover mb-0">
                <thead class="bg-light">
                  <tr>
                    <th class="pl-4" style="width: 80px;">ID</th>
                    <th style="width: 200px;">Başlık</th>
                    <th>Detay Özeti</th>
                    <th class="text-right pr-4" style="width: 150px;">İşlemler</th>
                  </tr>
                </thead>
                <tbody>
                  @if (Model == null || !Model.Any())
                  {
                    <tr>
                      <td colspan="4" class="text-center py-5 text-muted font-italic">
                        Henüz bir içerik eklenmemiş. "Yeni Kayıt Ekle" butonuyla başlayabilirsiniz.
                      </td>
                    </tr>
                  }
                  else
                  {
                    @foreach (var item in Model)
                    {
                      <tr>
                        <td class="pl-4"><strong>#@item.AboutId</strong></td>
                        <td><span class="badge badge-info px-3 py-2">@item.Title</span></td>
                        <td class="text-muted small">
                          @(item.Details?.Length > 100 ? item.Details.Substring(0, 100) + "..." : item.Details)
                        </td>
                        <td class="text-right pr-4">
                          <div class="btn-group">
                            <a href="/About/Update/@item.AboutId" class="btn btn-link btn-warning p-1" title="Düzenle">
                              <i class="la la-edit" style="font-size: 1.6rem;"></i>
                            </a>
                            <form method="post" action="/About/Delete/@item.AboutId" style="display:inline;">
                              @Html.AntiForgeryToken()
                              <button type="submit" class="btn btn-link btn-danger p-1"
                                onclick="return confirm('Bu içeriği silmek istediğinize emin misiniz?')" title="Sil">
                                <i class="la la-trash" style="font-size: 1.6rem;"></i>
                              </button>
                            </form>
                          </div>
                        </td>
                      </tr>
                    }
                  }
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>