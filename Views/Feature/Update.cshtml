@model Feature
@{
  ViewData["Title"] = "Öne Çıkan Alan Düzenle";
  Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
  <div class="container-fluid">
    <div class="row justify-content-center">
      <div class="col-md-8">
        <div class="card shadow-sm border-0">
          <div class="card-header bg-warning py-3">
            <h5 class="card-title mb-0 text-dark font-weight-bold">Öne Çıkan Alan Düzenle</h5>
          </div>
          <form method="post" asp-antiforgery="true">
            <input type="hidden" asp-for="FeatureId" />
            <div class="card-body p-4">
              <div class="alert alert-warning py-2 mb-4 border-0">
                <i class="la la-info-circle"></i> Bu alan genellikle ana sayfanın ilk giriş kısmını temsil eder.
              </div>

              <div class="form-group mb-4">
                <label class="font-weight-bold text-dark">Başlık</label>
                <input asp-for="Title" class="form-control border-warning" required />
                <span asp-validation-for="Title" class="text-danger small"></span>
              </div>

              <div class="form-group mb-2">
                <label class="font-weight-bold text-dark">Açıklama Metni</label>
                <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Description" class="text-danger small"></span>
              </div>
            </div>
            <div class="card-footer bg-light d-flex justify-content-between py-3">
              <a href="/Feature/Index" class="btn btn-outline-secondary">İptal</a>
              <button type="submit" class="btn btn-warning px-5 shadow-sm font-weight-bold">
                <i class="la la-refresh"></i> Değişiklikleri Kaydet
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>