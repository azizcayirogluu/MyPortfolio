@model List<Feature>
@{
  ViewData["Title"] = "Öne Çıkan Alanlar";
  Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
  <div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <div>
        <h4 class="page-title">Öne Çıkan Alanlar</h4>
      </div>
      <a href="/Feature/Create" class="btn btn-primary btn-round shadow-sm">
        <i class="la la-plus-circle"></i> Yeni Öne Çıkan Ekle
      </a>
    </div>

    @if (TempData["Success"] != null)
    {
      <div class="alert alert-success border-0 shadow-sm mb-4">
        <i class="la la-check-circle"></i> @TempData["Success"]
      </div>
    }

    <div class="card card-tasks">
      <div class="card-header border-bottom">
        <h5 class="card-title">İçerik Listesi</h5>
      </div>
      <div class="card-body p-0">
        <div class="table-responsive">
          <table class="table table-hover mb-0">
            <thead class="bg-light text-dark">
              <tr>
                <th class="pl-4" style="width: 80px;">ID</th>
                <th>Başlık</th>
                <th style="width: 50%;">Açıklama</th>
                <th class="text-right pr-4">İşlemler</th>
              </tr>
            </thead>
            <tbody>
              @if (Model == null || !Model.Any())
              {
                <tr>
                  <td colspan="4" class="text-center py-5 text-muted font-italic">Henüz bir veri girişi yapılmamış.</td>
                </tr>
              }
              else
              {
                @foreach (var item in Model)
                {
                  <tr>
                    <td class="pl-4">#@item.FeatureId</td>
                    <td class="font-weight-bold text-primary">@item.Title</td>
                    <td class="text-muted">
                      @(item.Description?.Length > 85 ? item.Description.Substring(0, 85) + "..." : item.Description)
                    </td>
                    <td class="text-right pr-4">
                      <a href="/Feature/Update/@item.FeatureId" class="btn btn-link btn-warning p-1" title="Düzenle">
                        <i class="la la-pencil-square" style="font-size: 1.5rem;"></i>
                      </a>
                      <form method="post" action="/Feature/Delete/@item.FeatureId" style="display:inline;">
                        <button type="submit" class="btn btn-link btn-danger p-1"
                          onclick="return confirm('Bu alanı silmek istediğinizden emin misiniz?')" title="Sil">
                          <i class="la la-trash-o" style="font-size: 1.5rem;"></i>
                        </button>
                      </form>
                    </td>
                  </tr>
                }
              }
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>