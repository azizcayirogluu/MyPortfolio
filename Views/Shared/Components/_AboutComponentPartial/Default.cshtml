<section id="about" class="s-about target-section" style="padding-top: 100px; padding-bottom: 100px;">
    <div class="row narrow section-intro has-bottom-sep">
        <div class="col-full text-center">
            <h3 class="subhead" style="color: #862121; text-transform: uppercase; letter-spacing: 2px;">Hakkımda</h3>
            <h1 class="display-1">@ViewBag.aboutTitle</h1>
            <p class="lead" style="font-size: 1.2rem; color: #555;">@ViewBag.aboutSubDescription</p>
        </div>
    </div>

    <div class="row about-content">
        <div class="col-six tab-full left">
            <h3 style="margin-bottom: 20px; border-left: 5px solid #862121; padding-left: 15px;">Ben Kimim?</h3>
            <p style="line-height: 1.8; text-align: justify;">@ViewBag.aboutDetail</p>
        </div>

        @await Component.InvokeAsync("_SkillComponentPartial")
    </div>

    <div class="row about-content about-content--buttons" style="margin-top: 50px;">
        <div class="col-six tab-full left">
            <a href="/files/azizCayiroglu.pdf" target="_blank" class="btn btn--primary full-width shadow"
                style="background-color: #862121; border-color: #862121;">
                <i class="la la-file-pdf"></i> CV'mi Görüntüle
            </a>
        </div>
        <div class="col-six tab-full right">
            <a href="#contact" class="btn full-width shadow-sm">
                <i class="la la-envelope"></i> Bana Yazın
            </a>
        </div>
    </div>

    <div style="margin-top: 80px;">
        @await Component.InvokeAsync("_ExperienceComponentPartial")
    </div>

</section>