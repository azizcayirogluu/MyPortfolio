@model List<MyPortolioUdemy.DAL.Entities.Feature>

<section id="home" class="s-home page-hero target-section" data-parallax="scroll"
    data-image-src="https://images.pexels.com/photos/6424583/pexels-photo-6424583.jpeg" data-natural-width="3000"
    data-natural-height="2000" data-position-y="center">

    <div class="overlay"></div>
    <div class="shadow-overlay"></div>

    <div class="home-content">
        <div class="row home-content__main">

            @if (Model != null && Model.Any())
            {
                // Eğer birden fazla feature varsa tasarım bozulmasın diye sadece ilkini alıyoruz
                var item = Model.FirstOrDefault();

                <h3>@item.Title</h3>
                <h1 style="font-size: 4.5rem; line-height: 1.2; margin-top: 10px; font-weight: 500;">
                    @Html.Raw(item.Description.Replace("\n", "<br>"))
                </h1>
            }

            <div class="home-content__buttons">
                <a href="#works" class="smoothscroll btn btn--stroke">
                    <i class="im im-wrench"></i> Son Projelerim
                </a>
                <a href="#about" class="smoothscroll btn btn--stroke">
                    <i class="im im-user"></i> Hakkımda
                </a>
            </div>

            <div class="home-content__scroll">
                <a href="#about" class="scroll-link smoothscroll">
                    <span>Keşfet</span>
                </a>
            </div>
        </div>
    </div>

    <ul class="home-social">
        <li>
            <a href="https://www.linkedin.com/in/azizcayirogluu/" target="_blank"><i
                    class="im im-linkedin"></i><span>LinkedIn</span></a>
        </li>
        <li>
            <a href="https://github.com/azizcayirogluu" target="_blank"><i
                    class="im im-github"></i><span>GitHub</span></a>
        </li>
        <li>
            <a href="https://www.instagram.com/azizcayirogluu/"><i
                    class="im im-instagram"></i><span>Instagram</span></a>
        </li>
    </ul>

</section>