<section id="works" class="s-works target-section">

    <div class="row narrow section-intro has-bottom-sep">
        <div class="col-full text-center">
            <h3 class="subhead" style="color: #862121; text-transform: uppercase;">Portfolyo</h3>
            <h1 class="display-2 font-weight-bold">Projelerim</h1>
            <p class="lead">Geliştirdiğim projeleri keşfetmek için üzerlerine gelebilirsiniz.</p>
        </div>
    </div>

    <div class="row masonry-wrap">
        <div class="masonry">
            @{
                var portfolios = Model as List<MyPortolioUdemy.DAL.Entities.Portfolio>;

                if (portfolios != null && portfolios.Any())
                {
                    foreach (var portfolio in portfolios)
                    {
                        <div class="masonry__brick portfolio-box">
                            <div class="item-folio">

                                @* --- 1. AŞAMA: SADECE RESİM VE HOVER EFEKTİ --- *@
                                <div class="item-folio__thumb">
                                    @* Başlık çakışmasını önlemek için 'title' özniteliğini boş bıraktık *@
                                    <a href="@portfolio.ImageUrl" class="thumb-link" data-size="1050x700">
                                        <img src="@portfolio.ImageUrl" alt="@portfolio.Title">

                                        @* Hover Katmanı *@
                                        <div class="item-folio__text-overlay">
                                            <span class="item-folio__cat">@portfolio.SubTitle</span>
                                            <h3 class="item-folio__title">@portfolio.Title</h3>
                                            <i class="la la-eye overlay-icon"></i>
                                        </div>
                                    </a>
                                </div>

                                @* --- 2. AŞAMA: TIKLAYINCA RESMİN ALTINDA ÇIKACAK AÇIKLAMA --- *@
                                @* Buton tamamen kaldırıldı, sadece açıklama metni kaldı *@
                                <div class="item-folio__caption">
                                    <p style="font-size: 1.6rem; line-height: 1.6; color: #fff;">@portfolio.Description</p>
                                </div>

                            </div>
                        </div>
                    }
                }
            }
        </div>
    </div>
</section>

<style>
    /* PROJELER ARASI MESAFE VE KUTU DÜZENİ */
    .portfolio-box {
        padding: 20px;
    }

    .item-folio {
        position: relative;
        border-radius: 12px;
        overflow: hidden;
        background: #000;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
        transition: all 0.3s ease;
    }

    /* RESİM ORANI VE DOLGUSU */
    .item-folio__thumb {
        position: relative;
        aspect-ratio: 16 / 10;
        overflow: hidden;
        cursor: pointer;
    }

    .item-folio__thumb img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.6s cubic-bezier(0.4, 0, 0.2, 1);
    }

    /* HOVER OVERLAY: BORDO VE NET */
    .item-folio__text-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(134, 33, 33, 0.92);
        /* Bordo tonu */
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        opacity: 0;
        transition: all 0.4s ease;
        text-align: center;
        padding: 25px;
    }

    .item-folio:hover .item-folio__text-overlay {
        opacity: 1;
    }

    .item-folio:hover .item-folio__thumb img {
        transform: scale(1.1);
    }

    /* YAZI STİLLERİ */
    .item-folio__title {
        color: #fff !important;
        font-size: 2.2rem !important;
        font-weight: 700 !important;
        margin: 0 !important;
        letter-spacing: 0.5px;
    }

    .item-folio__cat {
        color: rgba(255, 255, 255, 0.7);
        text-transform: uppercase;
        letter-spacing: 2px;
        font-size: 1.1rem;
        margin-bottom: 8px;
        font-weight: 600;
    }

    .overlay-icon {
        color: #fff;
        font-size: 3.5rem;
        margin-top: 15px;
    }

    /* LIGHTBOX İÇİNDE GÖZÜKECEK ALAN */
    .item-folio__caption {
        display: none;
    }
</style>