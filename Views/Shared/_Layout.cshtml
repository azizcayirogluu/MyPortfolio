<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Aziz ÇAYIROĞLU | Full Stack Developer</title>

    <link rel="shortcut icon" href="~/favicon.ico" type="image/x-icon">

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet"
        href="https://maxst.icons8.com/openapi/api/v1/icons8-line-awesome/1.3.0/css/line-awesome.min.css">

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MyPortolioUdemy.styles.css" asp-append-version="true" />

    <style>
        body {
            font-family: 'Inter', sans-serif;
            background-color: #f8f9fa;
        }

        .navbar {
            box-shadow: 0 2px 15px rgba(0, 0, 0, 0.05);
        }

        .navbar-brand {
            font-weight: 800;
            color: #862121 !important;
            letter-spacing: 1px;
        }

        footer {
            background: #fff;
            padding: 20px 0;
            margin-top: 50px;
        }
    </style>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white py-3">
            <div class="container">
                <a class="navbar-brand" asp-controller="Default" asp-action="Index">
                    <i class="la la-code"></i> AZİZ ÇAYIROĞLU
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto font-weight-bold">
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="#home">Ana Sayfa</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="#about">Hakkımda</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="#works">Projelerim</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="#contact">İletişim</a>
                        </li>
                        <li class="nav-item ms-lg-3">
                            <a class="btn btn-primary btn-sm px-4 rounded-pill shadow-sm" href="/Statistic/Index">
                                <i class="la la-lock"></i> Panel
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid p-0">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top text-center">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6 text-md-start text-muted">
                    &copy; @DateTime.Now.Year - Aziz Çayıroğlu | Tüm Hakları Saklıdır.
                </div>
                <div class="col-md-6 text-md-end">
                    <span class="badge bg-light text-primary border p-2">Asp.Net Core 6.0 MVC</span>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>