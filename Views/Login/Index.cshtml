@{
  Layout = null;
}
<!DOCTYPE html>
<html lang="tr">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Yönetim Paneli | Aziz Çayıroğlu</title>
  <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
  <link rel="stylesheet"
    href="https://maxst.icons8.com/openapi/api/v1/icons8-line-awesome/1.3.0/css/line-awesome.min.css">
  <style>
    body {
      background-color: #f4f7f6;
      /* Panel arka planıyla uyumlu açık gri */
      font-family: 'Inter', -apple-system, sans-serif;
      display: flex;
      align-items: center;
      justify-content: center;
      height: 100vh;
      margin: 0;
    }

    .login-container {
      width: 100%;
      max-width: 420px;
      padding: 15px;
    }

    .login-card {
      background: #ffffff;
      padding: 45px;
      border-radius: 12px;
      box-shadow: 0 10px 25px rgba(0, 0, 0, 0.05);
      /* Yumuşak gölge */
      border: 1px solid #e1e4e8;
    }

    .login-header {
      text-align: center;
      margin-bottom: 35px;
    }

    .login-header i {
      font-size: 50px;
      color: #862121;
      margin-bottom: 15px;
    }

    .login-header h2 {
      font-size: 24px;
      font-weight: 700;
      color: #333;
      margin-bottom: 5px;
    }

    .login-header p {
      color: #777;
      font-size: 14px;
    }

    .form-label {
      font-weight: 600;
      color: #555;
      font-size: 13px;
      text-transform: uppercase;
      letter-spacing: 0.5px;
    }

    .form-control {
      height: 48px;
      background: #fdfdfd;
      border: 1px solid #ced4da;
      border-radius: 8px;
      padding: 10px 15px;
      transition: all 0.3s;
    }

    .form-control:focus {
      border-color: #862121;
      box-shadow: 0 0 0 3px rgba(134, 33, 33, 0.1);
      background: #fff;
    }

    .btn-login {
      background-color: #862121;
      border: none;
      color: white;
      height: 50px;
      border-radius: 8px;
      font-weight: 600;
      font-size: 16px;
      margin-top: 15px;
      transition: background 0.3s;
    }

    .btn-login:hover {
      background-color: #6a1a1a;
      color: white;
      box-shadow: 0 5px 15px rgba(134, 33, 33, 0.3);
    }

    .footer-text {
      text-align: center;
      margin-top: 25px;
      font-size: 12px;
      color: #aaa;
    }
  </style>
</head>

<body>

  <div class="login-container">
    <div class="login-card">
      <div class="login-header">
        <i class="la la-user-shield"></i>
        <h2>Yönetim Paneli</h2>
        <p>Lütfen devam etmek için giriş yapın.</p>
      </div>

      @if (ViewBag.Error != null)
      {
        <div class="alert alert-danger border-0 small text-center mb-4"
          style="background-color: #fff5f5; color: #c53030;">
          <i class="la la-exclamation-triangle"></i> @ViewBag.Error
        </div>
      }

      <form method="post">
        <div class="mb-3">
          <label class="form-label">Kullanıcı Adı</label>
          <div class="input-group">
            <input type="text" name="Username" class="form-control" placeholder="Admin" required>
          </div>
        </div>

        <div class="mb-4">
          <label class="form-label">Şifre</label>
          <input type="password" name="Password" class="form-control" placeholder="••••••••" required>
        </div>

        <button type="submit" class="btn btn-login w-100">
          Giriş Yap <i class="la la-sign-in ml-1"></i>
        </button>
      </form>
    </div>

    <div class="footer-text">
      &copy; @DateTime.Now.Year Aziz Çayıroğlu Portfolio Management
    </div>
  </div>

</body>

</html>