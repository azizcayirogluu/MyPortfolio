@model List<Contact>
@{
  ViewData["Title"] = "İletişim Yönetimi";
  Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
  <div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <div>
        <h4 class="page-title">İletişim Bilgileri</h4>
      </div>
      <a href="/Contact/Create" class="btn btn-primary btn-round">
        <i class="la la-plus"></i> Yeni Ekle
      </a>
    </div>

    @if (TempData["Success"] != null)
    {
      <div class="alert alert-success border-0 shadow-sm mb-4">
        <i class="la la-check"></i> @TempData["Success"]
      </div>
    }

    <div class="card card-tasks">
      <div class="card-body p-0">
        <div class="table-responsive">
          <table class="table table-hover mb-0">
            <thead class="bg-light text-dark">
              <tr>
                <th class="pl-4">Başlık</th>
                <th>E-Posta</th>
                <th>Telefon</th>
                <th>Adres Özeti</th>
                <th class="text-right pr-4">İşlemler</th>
              </tr>
            </thead>
            <tbody>
              @if (!Model.Any())
              {
                <tr>
                  <td colspan="5" class="text-center py-5">Henüz iletişim bilgisi tanımlanmamış.</td>
                </tr>
              }
              @foreach (var item in Model)
              {
                <tr>
                  <td class="pl-4 font-weight-bold">@item.Title</td>
                  <td><i class="la la-envelope text-muted"></i> @item.Email1</td>
                  <td><i class="la la-phone text-muted"></i> @item.Phone1</td>
                  <td class="text-muted">
                    @(item.Address?.Length > 30 ? item.Address.Substring(0, 30) + "..." : item.Address)
                  </td>
                  <td class="text-right pr-4">
                    <a href="/Contact/Update/@item.ContactId" class="btn btn-link btn-warning p-1" title="Düzenle">
                      <i class="la la-edit" style="font-size: 1.4rem;"></i>
                    </a>
                    <form method="post" action="/Contact/Delete/@item.ContactId" style="display:inline;">
                      <button type="submit" class="btn btn-link btn-danger p-1"
                        onclick="return confirm('Silmek istediğinize emin misiniz?')">
                        <i class="la la-trash" style="font-size: 1.4rem;"></i>
                      </button>
                    </form>
                  </td>
                </tr>
              }
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>