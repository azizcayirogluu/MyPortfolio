@model Contact
@{
    ViewData["Title"] = "İletişim Ekle";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-md-10">
                <div class="card shadow-sm">
                    <div class="card-header bg-primary text-white py-3">
                        <h5 class="card-title mb-0 text-white text-center">Yeni İletişim Bilgisi Ekle</h5>
                    </div>
                    <form method="post" asp-antiforgery="true">
                        <div class="card-body p-4">
                            <div class="row">
                                <div class="col-md-12 form-group mb-3">
                                    <label class="font-weight-bold">İletişim Başlığı</label>
                                    <input asp-for="Title" class="form-control border-primary"
                                        placeholder="Örn: Genel Merkez" required />
                                </div>
                                <div class="col-md-6 form-group mb-3">
                                    <label class="font-weight-bold">E-Posta (1)</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend"><span class="input-group-text">@@</span></div>
                                        <input asp-for="Email1" type="email" class="form-control"
                                            placeholder="info@sirket.com" />
                                    </div>
                                </div>
                                <div class="col-md-6 form-group mb-3">
                                    <label class="font-weight-bold">E-Posta (2)</label>
                                    <input asp-for="Email2" type="email" class="form-control"
                                        placeholder="destek@sirket.com" />
                                </div>
                                <div class="col-md-6 form-group mb-3">
                                    <label class="font-weight-bold">Telefon (1)</label>
                                    <input asp-for="Phone1" class="form-control" placeholder="0212 XXX XX XX" />
                                </div>
                                <div class="col-md-6 form-group mb-3">
                                    <label class="font-weight-bold">Telefon (2)</label>
                                    <input asp-for="Phone2" class="form-control" placeholder="0532 XXX XX XX" />
                                </div>
                                <div class="col-md-12 form-group mb-3">
                                    <label class="font-weight-bold">Kısa Açıklama</label>
                                    <textarea asp-for="Description" class="form-control" rows="2"></textarea>
                                </div>
                                <div class="col-md-12 form-group mb-0">
                                    <label class="font-weight-bold">Adres Tam Metni</label>
                                    <textarea asp-for="Address" class="form-control" rows="3"></textarea>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer bg-light d-flex justify-content-end">
                            <a href="/Contact/Index" class="btn btn-outline-secondary mr-2">İptal</a>
                            <button type="submit" class="btn btn-primary px-5">Kaydet</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>