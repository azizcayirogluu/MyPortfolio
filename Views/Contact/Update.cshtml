@model Contact
@{
  ViewData["Title"] = "İletişim Düzenle";
  Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
  <div class="container-fluid">
    <div class="row justify-content-center">
      <div class="col-md-10">
        <div class="card shadow-sm border-0">
          <div class="card-header bg-warning py-3">
            <h5 class="card-title mb-0">İletişim Bilgilerini Güncelle</h5>
          </div>
          <form method="post" asp-antiforgery="true">
            <input type="hidden" asp-for="ContactId" />
            <div class="card-body p-4">
              <div class="row">
                <div class="col-md-12 form-group mb-3 text-center border-bottom pb-3">
                  <h6 class="text-muted">Kayıt ID: #@Model.ContactId</h6>
                </div>
                <div class="col-md-12 form-group mb-3">
                  <label class="font-weight-bold">Başlık</label>
                  <input asp-for="Title" class="form-control" required />
                </div>
                <div class="col-md-6 form-group mb-3">
                  <label class="font-weight-bold text-primary"><i class="la la-envelope"></i> E-Posta 1</label>
                  <input asp-for="Email1" type="email" class="form-control shadow-sm" />
                </div>
                <div class="col-md-6 form-group mb-3">
                  <label class="font-weight-bold text-primary"><i class="la la-phone"></i> Telefon 1</label>
                  <input asp-for="Phone1" class="form-control shadow-sm" />
                </div>
                <div class="col-md-12 form-group mb-3">
                  <label class="font-weight-bold">Adres</label>
                  <textarea asp-for="Address" class="form-control" rows="3"></textarea>
                </div>
                <div class="col-md-12 mt-2">
                  <div class="collapse" id="extraFields">
                    <div class="row">
                      <div class="col-md-6 form-group mb-3">
                        <label class="font-weight-bold">E-Posta 2 (Yedek)</label>
                        <input asp-for="Email2" type="email" class="form-control" />
                      </div>
                      <div class="col-md-6 form-group mb-3">
                        <label class="font-weight-bold">Telefon 2 (Yedek)</label>
                        <input asp-for="Phone2" class="form-control" />
                      </div>
                    </div>
                  </div>
                  <button class="btn btn-sm btn-link pl-0 text-info font-weight-bold" type="button"
                    data-toggle="collapse" data-target="#extraFields">
                    + Diğer Alanları Göster/Gizle
                  </button>
                </div>
              </div>
            </div>
            <div class="card-footer bg-light d-flex justify-content-between">
              <a href="/Contact/Index" class="btn btn-secondary">Geri Dön</a>
              <button type="submit" class="btn btn-warning px-5 shadow">
                <i class="la la-refresh"></i> Güncellemeleri Kaydet
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>