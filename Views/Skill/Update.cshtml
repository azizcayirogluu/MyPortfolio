@model Skill
@{
  ViewData["Title"] = "Yetenek Düzenle";
  Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
  <div class="container-fluid">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="card shadow-sm border-0">
          <div class="card-header bg-warning py-3">
            <h5 class="card-title mb-0 font-weight-bold">Yetenek Güncelle</h5>
          </div>
          <form method="post" asp-antiforgery="true">
            <input type="hidden" asp-for="SkillId" />
            <div class="card-body p-4">
              <div class="form-group mb-4">
                <label class="font-weight-bold">Yetenek Başlığı</label>
                <input asp-for="Title" class="form-control border-warning" required />
                <span asp-validation-for="Title" class="text-danger small"></span>
              </div>

              <div class="form-group mb-2">
                <label class="font-weight-bold">Bilgi Düzeyi (%)</label>
                <input asp-for="Value" type="number" min="0" max="100" class="form-control border-warning" required />
                <div class="mt-2 progress" style="height: 6px;">
                  <div class="progress-bar bg-warning" style="width: @Model.Value%"></div>
                </div>
                <span asp-validation-for="Value" class="text-danger small"></span>
              </div>
            </div>
            <div class="card-footer bg-light d-flex justify-content-between">
              <a href="/Skill/Index" class="btn btn-secondary">İptal</a>
              <button type="submit" class="btn btn-warning px-5 font-weight-bold shadow-sm">Güncelle</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>