@model List<Skill>
@{
  ViewData["Title"] = "Yetenekler Yönetimi";
  Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
  <div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <div>
        <h4 class="page-title">Yetenekler</h4>
      </div>
      <a href="/Skill/Create" class="btn btn-primary btn-round shadow-sm">
        <i class="la la-plus-circle"></i> Yeni Yetenek Ekle
      </a>
    </div>

    @if (TempData["Success"] != null)
    {
      <div class="alert alert-success border-0 shadow-sm">@TempData["Success"]</div>
    }

    <div class="card card-tasks">
      <div class="card-header border-bottom">
        <h5 class="card-title">Yetenek Seviyeleri</h5>
      </div>
      <div class="card-body p-0">
        <div class="table-responsive">
          <table class="table table-hover mb-0">
            <thead class="bg-light">
              <tr>
                <th class="pl-4" style="width: 20%">Yetenek Adı</th>
                <th style="width: 50%">Seviye (%)</th>
                <th class="text-center">Durum</th>
                <th class="text-right pr-4">İşlemler</th>
              </tr>
            </thead>
            <tbody>
              @if (Model == null || !Model.Any())
              {
                <tr>
                  <td colspan="4" class="text-center py-5 text-muted font-italic">Henüz bir yetenek eklenmemiş.</td>
                </tr>
              }
              else
              {
                @foreach (var item in Model)
                {
                  <tr>
                    <td class="pl-4 font-weight-bold text-dark">@item.Title</td>
                    <td>
                      <div class="progress mt-2" style="height: 12px; border-radius: 10px; background-color: #eee;">
                        <div class="progress-bar bg-info" role="progressbar"
                          style="width: @item.Value%; border-radius: 10px;" aria-valuenow="@item.Value" aria-valuemin="0"
                          aria-valuemax="100">
                        </div>
                      </div>
                    </td>
                    <td class="text-center">
                      <span class="badge badge-info p-2" style="min-width: 50px;">%@item.Value</span>
                    </td>
                    <td class="text-right pr-4">
                      <a href="/Skill/Update/@item.SkillId" class="btn btn-link btn-warning p-1" title="Düzenle">
                        <i class="la la-edit" style="font-size: 1.5rem"></i>
                      </a>
                      <form method="post" action="/Skill/Delete/@item.SkillId" style="display:inline;">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-link btn-danger p-1"
                          onclick="return confirm('Silmek istediğinize emin misiniz?')" title="Sil">
                          <i class="la la-trash" style="font-size: 1.5rem"></i>
                        </button>
                      </form>
                    </td>
                  </tr>
                }
              }
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>