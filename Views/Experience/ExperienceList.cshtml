@model List<Experience>
@{
	ViewData["Title"] = "Deneyim Listesi";
	Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<div class="d-flex justify-content-between align-items-center mb-4">
			<div>
				<h4 class="page-title">İş Deneyimleri</h4>
			</div>
			<a href="/Experience/CreateExperience" class="btn btn-primary btn-round">
				<i class="la la-plus"></i> Yeni Deneyim Ekle
			</a>
		</div>

		@if (TempData["SuccessMessage"] != null)
		{
			<div class="alert alert-success border-0 shadow-sm">@TempData["SuccessMessage"]</div>
		}

		<div class="card card-tasks">
			<div class="card-header border-bottom">
				<h5 class="card-title">Kariyer Geçmişi</h5>
			</div>
			<div class="card-body p-0">
				<div class="table-responsive">
					<table class="table table-hover align-items-center mb-0">
						<thead class="thead-light">
							<tr>
								<th class="pl-4">Firma / Kurum</th>
								<th>Pozisyon</th>
								<th>Tarih Aralığı</th>
								<th class="text-right pr-4">İşlemler</th>
							</tr>
						</thead>
						<tbody>
							@if (Model == null || !Model.Any())
							{
								<tr>
									<td colspan="4" class="text-center py-5 text-muted">Henüz bir deneyim kaydı eklenmemiş.</td>
								</tr>
							}
							else
							{
								@foreach (var item in Model)
								{
									<tr>
										<td class="pl-4">
											<div class="d-flex align-items-center">
												<div class="avatar avatar-sm mr-3">
													<span class="avatar-title rounded-circle border border-white bg-info">@item.Head</span>
												</div>
												<span class="font-weight-bold text-dark">@item.Head</span>
											</div>
										</td>
										<td><span class="badge badge-count">@item.Title</span></td>
										<td><i class="la la-calendar"></i> @item.Date</td>
										<td class="text-right pr-4">
											<a href="/Experience/UpdateExperience/@item.ExperienceId" class="btn btn-link btn-info p-1"
												title="Düzenle">
												<i class="la la-edit" style="font-size: 1.5rem"></i>
											</a>
											<a href="/Experience/DeleteExperience/@item.ExperienceId" class="btn btn-link btn-danger p-1"
												onclick="return confirm('Bu deneyimi silmek istediğinize emin misiniz?')" title="Sil">
												<i class="la la-trash" style="font-size: 1.5rem"></i>
											</a>
										</td>
									</tr>
								}
							}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>