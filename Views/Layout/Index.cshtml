<!DOCTYPE html>
<html lang="tr">
@await Component.InvokeAsync("_LayoutHeadComponentPartial")

<style>
	.main-panel {
		display: flex;
		flex-direction: column;
		min-height: 100vh;
	}

	.content {
		flex: 1;
	}

	.footer {
		background: #fff;
		border-top: 1px solid #eee;
	}
</style>

<body>
	<div class="wrapper">

		@await Component.InvokeAsync("_LayoutNavbarComponentPartial")

		@await Component.InvokeAsync("_LayoutSidebarComponentPartial")

		<div class="main-panel">
			<div class="content">
				<div class="page-inner pt-4">
					@RenderBody()
				</div>
			</div>

			<footer class="footer mt-auto">
				<div class="container-fluid">
					<div class="d-flex justify-content-between align-items-center py-3">

						<div class="copyright text-muted font-weight-bold">
							<span>© @DateTime.Now.Year</span>
							<span class="d-none d-sm-inline">|</span>
							<span class="text-primary">Admin Panel v1.0</span>
						</div>

						<div class="developer-info">
							<span class="text-muted mr-1 small">Geliştirici:</span>
							<a href="#" class="text-dark font-weight-bold mr-2">Aziz Çayıroğlu</a>
							<span class="badge badge-primary badge-pill px-3 py-2 shadow-sm" style="font-size: 0.7rem;">
								<i class="la la-code"></i> ASP.NET Core MVC
							</span>
						</div>

					</div>
				</div>
			</footer>
		</div>
	</div>

	@await Component.InvokeAsync("_LayoutScriptComponentPartial")
	@await RenderSectionAsync("Scripts", required: false)
</body>

</html>