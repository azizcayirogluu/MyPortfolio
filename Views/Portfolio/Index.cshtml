@model List<Portfolio>
@{
  ViewData["Title"] = "Portfolyo Yönetimi";
  Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
  <div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <div>
        <h4 class="page-title">Projelerim</h4>
      </div>
      <a href="/Portfolio/Create" class="btn btn-primary btn-round shadow-sm">
        <i class="la la-plus"></i> Yeni Proje Ekle
      </a>
    </div>

    @if (TempData["Success"] != null)
    {
      <div class="alert alert-success border-0 shadow-sm mb-4">@TempData["Success"]</div>
    }

    <div class="card card-tasks">
      <div class="card-header border-bottom">
        <h5 class="card-title">Proje Listesi</h5>
      </div>
      <div class="card-body p-0">
        <div class="table-responsive">
          <table class="table table-hover mb-0">
            <thead class="bg-light">
              <tr>
                <th class="pl-4">Görsel</th>
                <th>Başlık / Alt Başlık</th>
                <th>Açıklama</th>
                <th class="text-right pr-4">İşlemler</th>
              </tr>
            </thead>
            <tbody>
              @if (Model == null || !Model.Any())
              {
                <tr>
                  <td colspan="4" class="text-center py-5">Henüz proje eklenmemiş.</td>
                </tr>
              }
              @foreach (var item in Model)
              {
                <tr>
                  <td class="pl-4">
                    <img src="@item.ImageUrl" alt="@item.Title" class="rounded shadow-sm"
                      style="width: 80px; height: 50px; object-fit: cover; border: 1px solid #eee;" />
                  </td>
                  <td>
                    <div class="d-flex flex-column">
                      <span class="font-weight-bold">@item.Title</span>
                      <small class="text-muted">@item.SubTitle</small>
                    </div>
                  </td>
                  <td class="text-muted small">
                    @(item.Description?.Length > 60 ? item.Description.Substring(0, 60) + "..." : item.Description)
                  </td>
                  <td class="text-right pr-4">
                    <a href="@item.Url" target="_blank" class="btn btn-link btn-info p-1" title="Siteye Git"><i
                        class="la la-external-link" style="font-size:1.3rem"></i></a>
                    <a href="/Portfolio/Update/@item.PortfolioId" class="btn btn-link btn-warning p-1" title="Düzenle"><i
                        class="la la-edit" style="font-size:1.3rem"></i></a>
                    <form method="post" action="/Portfolio/Delete/@item.PortfolioId" style="display:inline;">
                      <button type="submit" class="btn btn-link btn-danger p-1"
                        onclick="return confirm('Silmek istediğinize emin misiniz?')" title="Sil">
                        <i class="la la-trash" style="font-size:1.3rem"></i>
                      </button>
                    </form>
                  </td>
                </tr>
              }
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>