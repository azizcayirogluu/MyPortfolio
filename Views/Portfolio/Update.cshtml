@model Portfolio
@{
  ViewData["Title"] = "Proje Güncelle";
  Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
  <div class="container-fluid">
    <div class="row justify-content-center">
      <div class="col-md-10">
        <div class="card shadow-sm border-0">
          <div class="card-header bg-warning py-3">
            <h5 class="card-title mb-0 text-dark font-weight-bold">Proje Güncelle: @Model.Title</h5>
          </div>
          <form method="post" asp-antiforgery="true">
            <input type="hidden" asp-for="PortfolioId" />
            <div class="card-body p-4">
              <div class="row align-items-center mb-4">
                <div class="col-md-4 text-center">
                  <label class="d-block mb-2 font-weight-bold">Mevcut Görsel</label>
                  <img src="@Model.ImageUrl" class="img-fluid rounded shadow"
                    style="max-height: 150px; border: 3px solid #ffc107;" />
                </div>
                <div class="col-md-8">
                  <div class="form-group mb-3">
                    <label class="font-weight-bold">Proje Başlığı</label>
                    <input asp-for="Title" class="form-control" required />
                  </div>
                  <div class="form-group mb-0">
                    <label class="font-weight-bold">Kategori</label>
                    <input asp-for="SubTitle" class="form-control" />
                  </div>
                </div>
              </div>
              <div class="form-group mb-3">
                <label class="font-weight-bold">Açıklama</label>
                <textarea asp-for="Description" class="form-control" rows="4"></textarea>
              </div>
              <div class="row">
                <div class="col-md-6 form-group">
                  <label class="font-weight-bold">Görsel Bağlantısını Güncelle</label>
                  <input asp-for="ImageUrl" class="form-control" />
                </div>
                <div class="col-md-6 form-group">
                  <label class="font-weight-bold">Canlı Proje URL</label>
                  <input asp-for="Url" class="form-control" />
                </div>
              </div>
            </div>
            <div class="card-footer bg-light d-flex justify-content-between">
              <a href="/Portfolio/Index" class="btn btn-secondary">İptal</a>
              <button type="submit" class="btn btn-warning px-5 font-weight-bold shadow-sm">Bilgileri Güncelle</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>