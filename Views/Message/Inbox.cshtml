@model List<Message>
@{
    ViewData["Title"] = "Gelen Mesajlar";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h4 class="page-title">Mesaj Kutusu</h4>
                <p class="text-muted small">@Model.Count(x => !x.IsRead) adet okunmamış mesajınız var.</p>
            </div>
            <a href="/Message/Create" class="btn btn-outline-primary btn-round">
                <i class="la la-paper-plane"></i> Yeni Mesaj Oluştur
            </a>
        </div>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success border-0 shadow-sm">@TempData["SuccessMessage"]</div>
        }

        <div class="card card-tasks">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="bg-light">
                            <tr>
                                <th style="width: 50px"></th>
                                <th>Gönderen</th>
                                <th>Konu</th>
                                <th>Tarih</th>
                                <th class="text-right">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr style="@(item.IsRead ? "opacity: 0.8;" : "font-weight: bold; background: #f0f7ff;")">
                                    <td class="text-center">
                                        <div
                                            style="width: 4px; height: 40px; background: @(item.IsRead ? "#ced4da" : "#007bff"); border-radius: 10px;">
                                        </div>
                                    </td>
                                    <td>
                                        <div class="d-flex flex-column">
                                            <span>@item.NameSurname</span>
                                            <small class="text-muted">@item.Email</small>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="text-truncate" style="max-width: 250px;">@item.Subject</div>
                                    </td>
                                    <td>@item.SendDate.ToString("dd MMM yyyy HH:mm")</td>
                                    <td class="text-right pr-4">
                                        <div class="btn-group">
                                            <a href="/Message/MessageDetail/@item.MessageId"
                                                class="btn btn-link btn-info p-1" title="Görüntüle">
                                                <i class="la la-search-plus" style="font-size: 1.4rem"></i>
                                            </a>
                                            <a href="/Message/Reply/@item.MessageId" class="btn btn-link btn-primary p-1"
                                                title="Yanıtla">
                                                <i class="la la-reply" style="font-size: 1.4rem"></i>
                                            </a>
                                            @if (item.IsRead)
                                            {
                                                <a href="/Message/ChangeIsReadToFalse/@item.MessageId"
                                                    class="btn btn-link text-muted p-1" title="Okunmadı İşaretle">
                                                    <i class="la la-envelope" style="font-size: 1.4rem"></i>
                                                </a>
                                            }
                                            else
                                            {
                                                <a href="/Message/ChangeIsReadToTrue/@item.MessageId"
                                                    class="btn btn-link text-success p-1" title="Okundu İşaretle">
                                                    <i class="la la-check-circle" style="font-size: 1.4rem"></i>
                                                </a>
                                            }
                                            <a href="/Message/DeleteMessage/@item.MessageId"
                                                class="btn btn-link btn-danger p-1"
                                                onclick="return confirm('Silmek istediğinize emin misiniz?')" title="Sil">
                                                <i class="la la-trash" style="font-size: 1.4rem"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>