@model List<Testimonial>
@{
  ViewData["Title"] = "Referanslar Yönetimi";
  Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
  <div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <div>
        <h4 class="page-title">Referanslarım Ve Yorumları</h4>
      </div>
      <a href="/Testimonial/Create" class="btn btn-primary btn-round shadow-sm">
        <i class="la la-plus"></i> Yeni Referans Ekle
      </a>
    </div>

    @if (TempData["Success"] != null)
    {
      <div class="alert alert-success border-0 shadow-sm mb-4">@TempData["Success"]</div>
    }

    <div class="card card-tasks">
      <div class="card-header border-bottom">
        <h5 class="card-title">Geri Bildirim Listesi</h5>
      </div>
      <div class="card-body p-0">
        <div class="table-responsive">
          <table class="table table-hover mb-0">
            <thead class="bg-light text-dark">
              <tr>
                <th class="pl-4">Kişi</th>
                <th>Başlık / Kurum</th>
                <th>Yorum Özeti</th>
                <th class="text-right pr-4">İşlemler</th>
              </tr>
            </thead>
            <tbody>
              @if (Model == null || !Model.Any())
              {
                <tr>
                  <td colspan="4" class="text-center py-5 text-muted">Henüz bir referans eklenmemiş.</td>
                </tr>
              }
              else
              {
                @foreach (var item in Model)
                {
                  <tr>
                    <td class="pl-4">
                      <div class="d-flex align-items-center">
                        <img src="@item.ImageUrl" class="rounded-circle mr-3 shadow-sm"
                          style="width: 45px; height: 45px; object-fit: cover; border: 2px solid #eee;"
                          onerror="this.src='/assets/img/no-user.jpg';" />
                        <span class="font-weight-bold">@item.NameSurname</span>
                      </div>
                    </td>
                    <td><span class="badge badge-count">@item.Title</span></td>
                    <td class="text-muted small font-italic">
                      "@(item.Description?.Length > 60 ? item.Description.Substring(0, 60) + "..." : item.Description)"
                    </td>
                    <td class="text-right pr-4">
                      <a href="/Testimonial/Update/@item.TestimonialId" class="btn btn-link btn-warning p-1"
                        title="Düzenle">
                        <i class="la la-edit" style="font-size: 1.5rem"></i>
                      </a>
                      <form method="post" action="/Testimonial/Delete/@item.TestimonialId" style="display:inline;">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-link btn-danger p-1"
                          onclick="return confirm('Bu referansı silmek istediğinize emin misiniz?')" title="Sil">
                          <i class="la la-trash" style="font-size: 1.5rem"></i>
                        </button>
                      </form>
                    </td>
                  </tr>
                }
              }
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>