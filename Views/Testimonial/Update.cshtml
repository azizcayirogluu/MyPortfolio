@model Testimonial
@{
  ViewData["Title"] = "Referans Düzenle";
  Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
  <div class="container-fluid">
    <div class="row justify-content-center">
      <div class="col-md-8">
        <div class="card shadow-sm border-0">
          <div class="card-header bg-warning py-3">
            <h5 class="card-title mb-0 font-weight-bold">Referans Güncelle</h5>
          </div>
          <form method="post" asp-antiforgery="true">
            <input type="hidden" asp-for="TestimonialId" />
            <div class="card-body p-4 text-dark">
              <div class="d-flex align-items-center mb-4 p-3 bg-light rounded shadow-inner">
                <img src="@Model.ImageUrl" class="rounded-circle mr-3 border border-warning"
                  style="width: 70px; height: 70px; object-fit: cover;" />
                <div>
                  <h6 class="mb-0 font-weight-bold">@Model.NameSurname</h6>
                  <small class="text-muted">Mevcut Ünvan: @Model.Title</small>
                </div>
              </div>

              <div class="row">
                <div class="col-md-6 form-group mb-3">
                  <label class="font-weight-bold">Ad Soyad</label>
                  <input asp-for="NameSurname" class="form-control border-warning" required />
                </div>
                <div class="col-md-6 form-group mb-3">
                  <label class="font-weight-bold">Ünvan</label>
                  <input asp-for="Title" class="form-control border-warning" />
                </div>
                <div class="col-md-12 form-group mb-3">
                  <label class="font-weight-bold">Fotoğraf Linkini Güncelle</label>
                  <input asp-for="ImageUrl" class="form-control" />
                </div>
                <div class="col-md-12 form-group mb-0">
                  <label class="font-weight-bold">Yorum</label>
                  <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                </div>
              </div>
            </div>
            <div class="card-footer bg-light d-flex justify-content-between py-3">
              <a href="/Testimonial/Index" class="btn btn-secondary">İptal</a>
              <button type="submit" class="btn btn-warning px-5 font-weight-bold shadow-sm">Bilgileri Güncelle</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>