@model List<SocialMedia>
@{
  ViewData["Title"] = "Sosyal Medya Yönetimi";
  Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
  <div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <div>
        <h4 class="page-title">Sosyal Medya Bağlantıları</h4>
      </div>
      <a href="/SocialMedia/Create" class="btn btn-primary btn-round shadow-sm">
        <i class="la la-plus"></i> Yeni Bağlantı Ekle
      </a>
    </div>

    @if (TempData["Success"] != null)
    {
      <div class="alert alert-success border-0 shadow-sm mb-4">@TempData["Success"]</div>
    }

    <div class="card card-tasks">
      <div class="card-body p-0">
        <div class="table-responsive">
          <table class="table table-hover mb-0">
            <thead class="bg-light text-dark">
              <tr>
                <th class="pl-4" style="width: 100px;">İkon</th>
                <th>Platform Adı</th>
                <th>Bağlantı Adresi</th>
                <th class="text-right pr-4">İşlemler</th>
              </tr>
            </thead>
            <tbody>
              @if (Model == null || !Model.Any())
              {
                <tr>
                  <td colspan="4" class="text-center py-5">Henüz bir sosyal medya hesabı eklenmemiş.</td>
                </tr>
              }
              else
              {
                @foreach (var item in Model)
                {
                  <tr>
                    <td class="pl-4">
                      <div class="avatar-sm">
                        <span class="avatar-title rounded-circle border border-white bg-dark shadow-sm">
                          <i class="@item.Icon" style="font-size: 1.2rem;"></i>
                        </span>
                      </div>
                    </td>
                    <td class="font-weight-bold">@item.Title</td>
                    <td>
                      <a href="@item.Url" target="_blank" class="text-info small">
                        <i class="la la-link"></i> Profilini Görüntüle
                      </a>
                    </td>
                    <td class="text-right pr-4">
                      <div class="btn-group">
                        <a href="/SocialMedia/Update/@item.SocialMediaId" class="btn btn-link btn-warning p-1"
                          title="Düzenle">
                          <i class="la la-edit" style="font-size: 1.5rem;"></i>
                        </a>
                        <form method="post" action="/SocialMedia/Delete/@item.SocialMediaId" style="display:inline;">
                          @Html.AntiForgeryToken()
                          <button type="submit" class="btn btn-link btn-danger p-1"
                            onclick="return confirm('Bu bağlantıyı silmek istediğinize emin misiniz?')" title="Sil">
                            <i class="la la-trash" style="font-size: 1.5rem;"></i>
                          </button>
                        </form>
                      </div>
                    </td>
                  </tr>
                }
              }
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>