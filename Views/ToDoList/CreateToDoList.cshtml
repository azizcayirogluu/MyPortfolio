@model ToDoList
@{
	ViewData["Title"] = "Yapılacak Ekle";
	Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<div class="row justify-content-center">
			<div class="col-md-8">
				<div class="card shadow-sm border-0">
					<div class="card-header bg-primary text-white py-3">
						<h5 class="card-title mb-0">Yeni Görev Tanımla</h5>
					</div>
					<form method="post">
						@Html.AntiForgeryToken()
						<div class="card-body p-4 text-dark">
							@if (!ViewData.ModelState.IsValid)
							{
								<div class="alert alert-danger py-2 px-3 mb-3 small">
									<ul class="mb-0">
										@foreach (var modelState in ViewData.ModelState.Values)
											foreach (var error in modelState.Errors)
											{
												<li>@error.ErrorMessage</li>
											}
									</ul>
								</div>
							}

							<div class="form-group mb-3 text-dark">
								<label class="font-weight-bold">Görev Başlığı / İçerik</label>
								<input type="text" asp-for="Title" class="form-control"
									placeholder="Yapılacak işi kısaca açıklayınız..." required />
								<span asp-validation-for="Title" class="text-danger small"></span>
							</div>

							<div class="row">
								<div class="col-md-6 form-group mb-3">
									<label class="font-weight-bold">Bitiş Tarihi</label>
									<input type="date" asp-for="Date" class="form-control" required />
									<span asp-validation-for="Date" class="text-danger small"></span>
								</div>
								<div class="col-md-6 form-group mb-3">
									<label class="font-weight-bold">Görsel Yolu (Opsiyonel)</label>
									<input type="text" asp-for="ImageUrl" class="form-control" placeholder="/images/icon.png" />
								</div>
							</div>
						</div>
						<div class="card-footer bg-light d-flex justify-content-between py-3">
							<a href="/ToDoList/Index" class="btn btn-link text-muted"><i class="la la-arrow-left"></i> Vazgeç</a>
							<button type="submit" class="btn btn-primary px-5 shadow">Görevi Kaydet</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}