@model List<ToDoList>
@{
    ViewData["Title"] = "Yapılacaklar Listesi";
    Layout = "~/Views/Layout/Index.cshtml";
    int count = 0;
}

<div class="content">
    <div class="container-fluid">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h4 class="page-title">Görev Takip Paneli</h4>
                <p class="text-muted small">Günlük işlerinizi ve planlarınızı buradan organize edin.</p>
            </div>
            <a href="/ToDoList/CreateToDoList" class="btn btn-primary btn-round shadow-sm">
                <i class="la la-plus"></i> Yeni Görev Ekle
            </a>
        </div>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success border-0 shadow-sm mb-4">@TempData["SuccessMessage"]</div>
        }

        <div class="card card-tasks">
            <div class="card-header border-bottom">
                <h5 class="card-title">Yapılacaklar Listesi</h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="bg-light text-dark">
                            <tr>
                                <th class="pl-4" style="width: 5%">#</th>
                                <th style="width: 45%">Görev / İş Açıklaması</th>
                                <th style="width: 15%">Son Tarih</th>
                                <th style="width: 15%">Durum</th>
                                <th class="text-right pr-4" style="width: 20%">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model == null || !Model.Any())
                            {
                                <tr>
                                    <td colspan="5" class="text-center py-5">Henüz planlanmış bir görev yok.</td>
                                </tr>
                            }
                            else
                            {
                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tr style="@(item.Status ? "opacity: 0.6; background-color: #f8f9fa;" : "")">
                                        <td class="pl-4 font-weight-bold">@count</td>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                @if (!string.IsNullOrEmpty(item.ImageUrl))
                                                {
                                                    <img src="@item.ImageUrl" class="rounded mr-2"
                                                        style="width: 30px; height: 30px; object-fit: cover;" />
                                                }
                                                <span
                                                    style="@(item.Status ? "text-decoration: line-through;" : "")">@item.Title</span>
                                            </div>
                                        </td>
                                        <td><i class="la la-calendar-check-o"></i> @item.Date.ToString("dd MMM yyyy")</td>
                                        <td>
                                            @if (item.Status)
                                            {
                                                <span class="badge badge-success p-2 px-3"><i class="la la-check"></i>
                                                    Tamamlandı</span>
                                            }
                                            else
                                            {
                                                <span class="badge badge-warning p-2 px-3 text-dark"><i class="la la-clock-o"></i>
                                                    Beklemede</span>
                                            }
                                        </td>
                                        <td class="text-right pr-4">
                                            @if (item.Status)
                                            {
                                                <a href="/ToDoList/ChangeToDoListStatusToFalse/@item.ToDoListId"
                                                    class="btn btn-link btn-secondary p-1" title="Geri Al"><i class="la la-undo"
                                                        style="font-size: 1.4rem"></i></a>
                                            }
                                            else
                                            {
                                                <a href="/ToDoList/ChangeToDoListStatusToTrue/@item.ToDoListId"
                                                    class="btn btn-link btn-success p-1" title="Tamamla"><i
                                                        class="la la-check-circle-o" style="font-size: 1.4rem"></i></a>
                                            }
                                            <a href="/ToDoList/UpdateToDoList/@item.ToDoListId"
                                                class="btn btn-link btn-info p-1" title="Düzenle"><i class="la la-edit"
                                                    style="font-size: 1.4rem"></i></a>
                                            <a href="/ToDoList/DeleteToDoList/@item.ToDoListId"
                                                class="btn btn-link btn-danger p-1"
                                                onclick="return confirm('Bu görevi silmek istediğinize emin misiniz?')"
                                                title="Sil"><i class="la la-trash" style="font-size: 1.4rem"></i></a>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>